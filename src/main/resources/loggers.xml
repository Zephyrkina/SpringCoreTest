<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean id="consoleEventLogger" class="com.training.ConsoleEventLogger"/>
    <bean id="eventLogger" class="com.training.EventLogger" abstract="true"/>

    <bean id="fileEventLogger" class="com.training.FileEventLogger" init-method="init" >
        <constructor-arg value="outFile.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.training.CacheFileEventLogger"  destroy-method="destroy" parent="fileEventLogger">
        <constructor-arg value="4"/>
    </bean>

    <bean id="combinedEventLogger" class="com.training.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="fileEventLogger"/>
                <ref bean="consoleEventLogger"/>
                <!--<ref bean="cacheFileEventLogger"/>-->
            </list>
        </constructor-arg>
    </bean>

</beans>