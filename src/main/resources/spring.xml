<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <import resource="loggers.xml"/>

    <bean id="client" class="com.training.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
        <property name="greeting" value="hi there"/>
    </bean>


    <bean id="app" class="com.training.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="consoleEventLogger"/>
        <constructor-arg>
            <map>
                <entry key="INFO" value-ref="consoleEventLogger"/>
                <entry key="ERROR" value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>
    </bean>

   <bean id="event" class="com.training.Event" scope="prototype">
       <constructor-arg>
           <bean id="date" class="java.util.Date"/>
       </constructor-arg>
       <constructor-arg>
           <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
       </constructor-arg>
   </bean>


</beans>